<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.changgou.user.dao.TbCitiesDao">

    <resultMap type="com.changgou.user.pojo.TbCities" id="TbCitiesMap">
        <result property="cityid" column="cityid" jdbcType="VARCHAR"/>
        <result property="city" column="city" jdbcType="VARCHAR"/>
        <result property="provinceid" column="provinceid" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbCitiesMap">
        select
          cityid, city, provinceid
        from tb_cities
        where cityid = #{cityid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbCitiesMap">
        select
          cityid, city, provinceid
        from tb_cities
        <where>
            <if test="cityid != null and cityid != ''">
                and cityid = #{cityid}
            </if>
            <if test="city != null and city != ''">
                and city = #{city}
            </if>
            <if test="provinceid != null and provinceid != ''">
                and provinceid = #{provinceid}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from tb_cities
        <where>
            <if test="cityid != null and cityid != ''">
                and cityid = #{cityid}
            </if>
            <if test="city != null and city != ''">
                and city = #{city}
            </if>
            <if test="provinceid != null and provinceid != ''">
                and provinceid = #{provinceid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="cityid" useGeneratedKeys="true">
        insert into tb_cities(city, provinceid)
        values (#{city}, #{provinceid})
    </insert>

    <insert id="insertBatch" keyProperty="cityid" useGeneratedKeys="true">
        insert into tb_cities(city, provinceid)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.city}, #{entity.provinceid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="cityid" useGeneratedKeys="true">
        insert into tb_cities(city, provinceid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.city}, #{entity.provinceid})
        </foreach>
        on duplicate key update
        city = values(city),
        provinceid = values(provinceid)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update tb_cities
        <set>
            <if test="city != null and city != ''">
                city = #{city},
            </if>
            <if test="provinceid != null and provinceid != ''">
                provinceid = #{provinceid},
            </if>
        </set>
        where cityid = #{cityid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from tb_cities where cityid = #{cityid}
    </delete>

</mapper>

