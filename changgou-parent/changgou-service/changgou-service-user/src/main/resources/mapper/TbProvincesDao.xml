<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.changgou.user.dao.TbProvincesDao">

    <resultMap type="com.changgou.user.pojo.TbProvinces" id="TbProvincesMap">
        <result property="provinceid" column="provinceid" jdbcType="VARCHAR"/>
        <result property="province" column="province" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbProvincesMap">
        select
          provinceid, province
        from tb_provinces
        where provinceid = #{provinceid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbProvincesMap">
        select
          provinceid, province
        from tb_provinces
        <where>
            <if test="provinceid != null and provinceid != ''">
                and provinceid = #{provinceid}
            </if>
            <if test="province != null and province != ''">
                and province = #{province}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from tb_provinces
        <where>
            <if test="provinceid != null and provinceid != ''">
                and provinceid = #{provinceid}
            </if>
            <if test="province != null and province != ''">
                and province = #{province}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="provinceid" useGeneratedKeys="true">
        insert into tb_provinces(province)
        values (#{province})
    </insert>

    <insert id="insertBatch" keyProperty="provinceid" useGeneratedKeys="true">
        insert into tb_provinces(province)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.province})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="provinceid" useGeneratedKeys="true">
        insert into tb_provinces(province)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.province})
        </foreach>
        on duplicate key update
        province = values(province)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update tb_provinces
        <set>
            <if test="province != null and province != ''">
                province = #{province},
            </if>
        </set>
        where provinceid = #{provinceid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from tb_provinces where provinceid = #{provinceid}
    </delete>

</mapper>

