<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.changgou.order.dao.CategoryReportDao">

    <resultMap type="com.changgou.order.pojo.CategoryReport" id="CategoryReportMap">
        <result property="categoryId1" column="category_id1" jdbcType="INTEGER"/>
        <result property="categoryId2" column="category_id2" jdbcType="INTEGER"/>
        <result property="categoryId3" column="category_id3" jdbcType="INTEGER"/>
        <result property="countDate" column="count_date" jdbcType="TIMESTAMP"/>
        <result property="num" column="num" jdbcType="INTEGER"/>
        <result property="money" column="money" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CategoryReportMap">
        select
          category_id1, category_id2, category_id3, count_date, num, money
        from tb_category_report
        where category_id1 = #{categoryId1}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CategoryReportMap">
        select
          category_id1, category_id2, category_id3, count_date, num, money
        from tb_category_report
        <where>
            <if test="categoryId1 != null">
                and category_id1 = #{categoryId1}
            </if>
            <if test="categoryId2 != null">
                and category_id2 = #{categoryId2}
            </if>
            <if test="categoryId3 != null">
                and category_id3 = #{categoryId3}
            </if>
            <if test="countDate != null">
                and count_date = #{countDate}
            </if>
            <if test="num != null">
                and num = #{num}
            </if>
            <if test="money != null">
                and money = #{money}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from tb_category_report
        <where>
            <if test="categoryId1 != null">
                and category_id1 = #{categoryId1}
            </if>
            <if test="categoryId2 != null">
                and category_id2 = #{categoryId2}
            </if>
            <if test="categoryId3 != null">
                and category_id3 = #{categoryId3}
            </if>
            <if test="countDate != null">
                and count_date = #{countDate}
            </if>
            <if test="num != null">
                and num = #{num}
            </if>
            <if test="money != null">
                and money = #{money}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="categoryId1" useGeneratedKeys="true">
        insert into tb_category_report(num, money)
        values (#{num}, #{money})
    </insert>

    <insert id="insertBatch" keyProperty="categoryId1" useGeneratedKeys="true">
        insert into tb_category_report(num, money)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.num}, #{entity.money})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="categoryId1" useGeneratedKeys="true">
        insert into tb_category_report(num, money)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.num}, #{entity.money})
        </foreach>
        on duplicate key update
        num = values(num),
        money = values(money)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update tb_category_report
        <set>
            <if test="num != null">
                num = #{num},
            </if>
            <if test="money != null">
                money = #{money},
            </if>
        </set>
        where category_id1 = #{categoryId1}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from tb_category_report where category_id1 = #{categoryId1}
    </delete>

</mapper>

