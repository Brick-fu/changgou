<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.changgou.order.dao.TbReturnCauseDao">

    <resultMap type="com.changgou.order.entity.TbReturnCause" id="TbReturnCauseMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="cause" column="cause" jdbcType="VARCHAR"/>
        <result property="seq" column="seq" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbReturnCauseMap">
        select
          id, cause, seq, status
        from tb_return_cause
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbReturnCauseMap">
        select
          id, cause, seq, status
        from tb_return_cause
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="cause != null and cause != ''">
                and cause = #{cause}
            </if>
            <if test="seq != null">
                and seq = #{seq}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from tb_return_cause
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="cause != null and cause != ''">
                and cause = #{cause}
            </if>
            <if test="seq != null">
                and seq = #{seq}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into tb_return_cause(cause, seq, status)
        values (#{cause}, #{seq}, #{status})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tb_return_cause(cause, seq, status)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.cause}, #{entity.seq}, #{entity.status})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tb_return_cause(cause, seq, status)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.cause}, #{entity.seq}, #{entity.status})
        </foreach>
        on duplicate key update
        cause = values(cause),
        seq = values(seq),
        status = values(status)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update tb_return_cause
        <set>
            <if test="cause != null and cause != ''">
                cause = #{cause},
            </if>
            <if test="seq != null">
                seq = #{seq},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from tb_return_cause where id = #{id}
    </delete>

</mapper>

