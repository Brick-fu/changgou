<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.changgou.goods.dao.CategoryMapper">
    <select id="findList" resultType="com.changgou.goods.pojo.Category">
        select * from tb_category
    </select>

    <select id="findById" parameterType="int" resultType="com.changgou.goods.pojo.Category">
        select * from tb_category where id = #{id}
    </select>

    <select id="findByParentId" parameterType="int" resultType="com.changgou.goods.pojo.Category">
        select * from tb_category where parent_id = #{pid}
    </select>

    <select id="findList" parameterType="com.changgou.goods.pojo.Category" resultType="com.changgou.goods.pojo.Category">
        select * from tb_category
        <trim prefix="where" prefixOverrides="AND">
            <if test="id != null">AND id = #{id}</if>
            <if test="name != null">AND name like CONCAT('%',#{name},'%')</if>
            <if test="goodsNum != null">AND goods_num = #{goodsNum}</if>
            <if test="isShow != null">AND is_show = #{isShow}</if>
            <if test="isMenu != null">AND is_menu = #{isMenu}</if>
            <if test="seq != null">AND seq = #{seq}</if>
            <if test="parentId != null">AND parent_id = #{parentId}</if>
            <if test="templateId != null">AND template_id = #{templateId}</if>
        </trim>
    </select>

    <insert id="add" parameterType="com.changgou.goods.pojo.Category">
        INSERT into tb_category(id, name, goods_num, is_show, is_menu, seq, parent_id, template_id) values(#{id},#{name},#{goodsNum},#{isShow},#{isMenu},#{seq},#{parentId},#{templateId});
    </insert>

    <update id="update" parameterType="com.changgou.goods.pojo.Category">
        UPDATE tb_category
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="goodsNum != null">
                goods_num = #{goodsNum},
            </if>
            <if test="isShow != null">
                is_show = #{isShow},
            </if>
            <if test="isMenu != null">
                is_menu = #{isMenu},
            </if>
            <if test="seq != null">
                seq = #{seq},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="templateId != null">
                template_id = #{templateId},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM  tb_category  where id = #{id}
    </delete>

</mapper>